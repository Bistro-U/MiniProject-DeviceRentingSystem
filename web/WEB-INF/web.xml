<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>quanghung.controller.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCategoryController</servlet-name>
        <servlet-class>quanghung.controller.CreateCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateDeviceController</servlet-name>
        <servlet-class>quanghung.controller.CreateDeviceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchDeviceController</servlet-name>
        <servlet-class>quanghung.controller.SearchDeviceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetListController</servlet-name>
        <servlet-class>quanghung.controller.GetListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InputDeviceInfoController</servlet-name>
        <servlet-class>quanghung.controller.InputDeviceInfoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCategoryController</servlet-name>
        <url-pattern>/CreateCategoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateDeviceController</servlet-name>
        <url-pattern>/CreateDeviceController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchDeviceController</servlet-name>
        <url-pattern>/SearchDeviceController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetListController</servlet-name>
        <url-pattern>/GetListController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InputDeviceInfoController</servlet-name>
        <url-pattern>/InputDeviceInfoController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>deviceManagement.jsp</welcome-file>
    </welcome-file-list>
</web-app>
